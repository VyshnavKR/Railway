<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.vyshnav.indianrailwaysimpledesign.PnrActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_response_code"
        android:text="Response Code"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pnrNo"
        android:layout_below="@+id/tv_response_code"
        android:text="PNR"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_chart_prepared"
        android:layout_below="@+id/tv_pnrNo"
        android:text="Chart Prepared:"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:layout_below="@+id/tv_chart_prepared"
        android:text="Date"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_train_number"
        android:layout_below="@+id/tv_date"
        android:text="Train Number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_train_name"
        android:layout_below="@+id/tv_train_number"
        android:text="Train Name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_class"
        android:layout_below="@+id/tv_train_name"
        android:text="Class"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_from"
        android:layout_below="@+id/tv_class"
        android:text="From"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_to"
        android:layout_below="@+id/tv_from"
        android:text="To"/>


</RelativeLayout>
